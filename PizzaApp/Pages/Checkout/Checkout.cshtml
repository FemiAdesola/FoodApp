@page
@model PizzaApp.Pages.Checkout.CheckoutModel
@{
}

@*<a class="nav-link text-dark" asp-area="" asp-page="/Checkout/ThankYou">Thank you</a>*@

<h1>Your Order!</h1>
@*for get image*@
@{
    var imagePath = "~/images/Foods/" + (@Model.ImageTitle + ".png");
}
<div class="align-content-center">
    <div class=" card col-4 mx-auto mb-5">
        <img src=@imagePath class="w-100 card-img-top" asp-append-version="true"/>
        <div class="card-body">
            <p class="card-text">Your order for @Model.ImageTitle Food is ready now for pick up!</p>
            @*<p class="card-text">Your order for @Model.PizzaName Food is ready now for pick up!</p>*@
            <p class="card-text">The total price for your order is: @Model.PizzaPrice€</p>
            <br />
            <a class="btn alert-success text-dark" asp-area="" asp-page="/Checkout/ThankYou">Confirm Order</a>
        </div>
    </div>
</div>

