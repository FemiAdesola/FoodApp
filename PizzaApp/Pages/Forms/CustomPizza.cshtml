@page
@model PizzaApp.Pages.Forms.CustomPizzaModel
@{
}

<div class="text-center container">
    <h1>Create Your Own desire Food!</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 alert-info col-6">
        <input class="form-control" type="text" asp-for="Pizza.PizzaName" placeholder="Name your Food..." />
        <br />
        <div class="me-5">
            <div class="input-group">
                <input class="form-check-input me-3" type="checkbox" asp-for="Pizza.TomatoSauce" id="TomatoSauce" placeholder="Tomato Sauce" />
                <label class="form-check-label" for="TomatoSauce">
                    TomatoSauce
                </label>
                <br />
            </div>
            <div class="input-group">
                <input class="form-check-input me-3" id="Ham" type="checkbox" asp-for="Pizza.Ham" placeholder="Ham" />
                <label class="form-check-label" for="Ham">
                    Ham
                </label>
                <br />
            </div>
            <div class="input-group">
                <input class="form-check-input me-3" id="Beef" type="checkbox" asp-for="Pizza.Beef" placeholder="Beef" />
                <label class="form-check-label" for="Beef">
                    Beef
                </label>
                <br />
            </div>
            <div class="input-group">
                <input class="form-check-input me-3" id="Lohi" type="checkbox" asp-for="Pizza.Lohi" placeholder="Lohi" />
                <label class="form-check-label" for="Lohi">
                    Lohi
                </label>
                <br />
            </div>
            <div class="input-group">
                <input class="form-check-input me-3" id="Mushroom" type="checkbox" asp-for="Pizza.Mushroom" placeholder="Mushroom" />
                <label class="form-check-label" for="Mushroom">
                    Mushroom
                </label>
                <br />
            </div>
            <div class="input-group">
                <input class="form-check-input me-3" id="Cheese" type="checkbox" asp-for="Pizza.Cheese" placeholder="Cheese" />
                <label class="form-check-label" for="Cheese">
                    Cheese
                </label>
                <br />
            </div>
            <div class="input-group">
                <input class="form-check-input me-3" id="Pepper" type="checkbox" asp-for="Pizza.Pepper" placeholder="Pepper" />
                <label class="form-check-label" for="Pepper">
                    Pepper
                </label>
                <br />
            </div>
            <div class="input-group">
                <input class="form-check-input me-3" id="Pineapple" type="checkbox" asp-for="Pizza.Pineapple" placeholder="pineapple" />
                <label class="form-check-label" for="Pineapple">
                    Pineapple
                </label>
                <br />
            </div>
            <div class="input-group">
                <input class="form-check-input me-3" id="Tunna" type="checkbox" asp-for="Pizza.Tunna" placeholder="Tunna" />
                <label class="form-check-label" for="Tunna">
                    Tunna
                </label>
                <br />
            </div>
        </div>
        <button class="btn btn-secondary mt-1" type="submit">Order My Food</button>
    </form>
    
</div>