@page
@model PizzaApp.Pages.Forms.CustomPizzaModel
@{
}

<div class="text-center container">
    <h1>Create Your Own desire Pizza!</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 alert-info col-4">
        <input type="text" asp-for="Pizza.PizzaName" placeholder="Name your pizza..." />
        <br />

        <input type="checkbox" asp-for="Pizza.TomatoSauce" placeholder="Tomato Sauce" />TomatoSauce
        <br />

        <input type="checkbox" asp-for="Pizza.Ham" placeholder="Ham" />Ham
        <br />
        <input type="checkbox" asp-for="Pizza.Beef" placeholder="Beef" />Beef
        <br />
        <input type="checkbox" asp-for="Pizza.Lohi" placeholder="Lohi" />Lohi
        <br />
        <input type="checkbox" asp-for="Pizza.Mushroom" placeholder="Mushroom" />Mushroom
        <br />
        <input type="checkbox" asp-for="Pizza.Cheese" placeholder="Cheese" />Cheese
        <br />
        <input type="checkbox" asp-for="Pizza.Pepper" placeholder="Pepper" />Pepper
        <br />
        <input type="checkbox" asp-for="Pizza.PineApple" placeholder="pineapple" />PineApple
        <br />
        <input type="checkbox" asp-for="Pizza.Tunna" placeholder="Tunna" />Tunna
        <br />

        <button class="btn btn-secondary mt-1" type="submit">Order My Pizza</button>
    </form>
    
</div>