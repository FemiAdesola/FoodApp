@page
@model PizzaApp.Pages.PizzaModel
@{
}

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Check our great varieties pizza </h1>
        <h4>Choose One, or make Pizza by our pizza Builder! Then Order!</h4>
        <h4>Your details is not needed</h4>
        <h4>We have everything with us</h4>
